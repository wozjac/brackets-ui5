{
    "env": {
        "es6": true,
        "node": true,
        "amd": true,
        "jquery": true,
        "browser": true,
        "jasmine": true
    },
    "globals" : {
        "brackets": false,
        "$": false
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "indent": [0, 4],
        "linebreak-style": [0, "windows"],
        "quotes": [2, "double"],
        "semi": [2, "always"],
        "curly": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": [2, {
            "properties": "always"
        }],
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "comma-style": [2, "last"],
        "key-spacing": [2, {
            "mode": "strict",
            "beforeColon": false,
            "afterColon": true
        }],
        "keyword-spacing": 2,
        "block-spacing": 2,
        "array-bracket-spacing": [2, "never"],
        "object-curly-spacing": [2, "always"],
        "computed-property-spacing": [2, "never"],
        "space-in-parens": [1, "never"],
        "space-before-function-paren": [0, "always"],
        "generator-star-spacing": [2, "after"],
        "yield-star-spacing": [2, "after"],
        "space-infix-ops": 2,
        "space-unary-ops": 2,
        "spaced-comment": [0, "always"],
        "arrow-spacing": [2, {
            "before": true,
            "after": true
        }],
        "arrow-parens": [2, "always"],
        "arrow-body-style": [2, "always"],
        "no-trailing-spaces": 2,
        "no-multiple-empty-lines": [2, {
            "max": 1
        }],
        "eol-last": 0,
        "valid-jsdoc": 2,
        "no-implicit-coercion": [2, {
            "allow": ["!!"]
        }],
        "no-native-reassign": 2,
        "wrap-iife": [2, "outside"],
        "yoda": [2, "never"],
        "prefer-arrow-callback": 1,
        "prefer-const": 2,
        "no-var": 2,
        "prefer-template": 1,
        "prefer-rest-params": 2,
        "prefer-spread": 2,
        "object-shorthand": [2, "always"],
        "no-array-constructor": 2,
        "no-new-object": 2,
        "no-console": 0,
        "new-cap": 2,
        "new-parens": 2,
        "no-lonely-if": 2,
        "no-use-before-define": 2,
        "no-with": 2,
        "eqeqeq": [2, "smart"]
    }
}